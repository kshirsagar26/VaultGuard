# Server Configuration
PORT=5000
NODE_ENV=development

# HTTPS Configuration
HTTPS_PORT=5001
USE_HTTPS=false
SSL_KEY_PATH=./ssl/key.pem
SSL_CERT_PATH=./ssl/cert.pem

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Database Configuration (SQLite is used by default)
# DATABASE_URL=sqlite:./database/passwords.db

# Security Configuration
# JWT_SECRET=your-jwt-secret-here (if using JWT tokens)
# SESSION_SECRET=your-session-secret-here (if using sessions)

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Content Security Policy
# CSP_REPORT_URI=https://your-domain.com/csp-report

# Logging
LOG_LEVEL=info

# Production Settings
# In production, set these:
# NODE_ENV=production
# USE_HTTPS=true
# CLIENT_URL=https://your-domain.com 