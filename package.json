{
  "name": "password-manager",
  "version": "1.0.0",
  "description": "A secure web-based password manager with zero-knowledge architecture",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
